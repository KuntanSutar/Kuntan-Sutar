<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>bank-servlet-app</display-name>

	<welcome-file-list>
		<welcome-file>views/index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<description>
  		</description>
		<display-name>HomeController</display-name>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>com.techlab.controller.HomeController</servlet-class>
	</servlet>
	
	<servlet>
		<description>
		</description>
		<display-name>TransactionController</display-name>
		<servlet-name>TransactionController</servlet-name>
		<servlet-class>com.techlab.controller.TransactionController</servlet-class>
	</servlet>
	
	<servlet>
		<description>
		</description>
		<display-name>RegisterController</display-name>
		<servlet-name>RegisterController</servlet-name>
		<servlet-class>com.techlab.controller.RegisterController</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>LoginController</display-name>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>com.techlab.controller.LoginController</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>PassbookController</display-name>
		<servlet-name>PassbookController</servlet-name>
		<servlet-class>com.techlab.controller.PassbookController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HomeController</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>TransactionController</servlet-name>
		<url-pattern>/transaction</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>RegisterController</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PassbookController</servlet-name>
		<url-pattern>/passbook</url-pattern>
	</servlet-mapping>

</web-app>